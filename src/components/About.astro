<script>
	import { annotate } from 'rough-notation'

	const color = '#db2777'
	const highlightedElement = document.getElementById(
		'highlight'
	) as HTMLSpanElement
	const annotation = annotate(highlightedElement, {
		type: 'highlight',
		multiline: true,
		color: color
	})

	const observer = new IntersectionObserver(
		entries =>
			entries.forEach(entry => {
				if (entry.isIntersecting) {
					annotation.show()
					observer.unobserve(highlightedElement)
				}
			}),
		{
			root: null,
			rootMargin: '0px',
			threshold: 1
		}
	)
	observer.observe(highlightedElement)
</script>
