---
import Head from '@components/Head.astro'
import Header from '@components/header/Header.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '../config'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<title>Victor's homepage</title>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<Head title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body
		class="mx-auto min-h-screen bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-50 transition-colors duration-500 break-words"
	>
		<Header />
		<slot />
		<footer></footer>
	</body>
</html>
