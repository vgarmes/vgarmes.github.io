---
import Footer from '~/components/common/Footer.astro'
import Head from '~/components/common/Head.astro'
import Header from '~/components/header/Header.astro'
const { title, description } = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<title>{title}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<Head title={title} description={description} />
	</head>
	<body
		class="flex flex-col break-words bg-slate-100 font-sans text-gray-900 transition-colors duration-500 dark:bg-gray-900 dark:text-gray-50"
	>
		<Header />
		<main class="mx-auto mt-28 w-full max-w-7xl px-4 sm:px-16">
			<slot />
		</main>
		<Footer />
	</body>
</html>
