---
import type { MarkdownHeading } from 'astro'
import BaseLayout from './base.astro'
import { formatDate } from '~/util/helpers'
import TableOfContents from '~/components/TableOfContents'
import generateToc from '~/util/generateToc'
import BackTopButton from '~/components/BackTopButton.astro'
import PostStats from '~/components/post-stats'
import Aside from '~/components/aside.astro'
import Undo from '~/components/icons/Undo.astro'

type PostFrontmatter = {
	title: string
	description: string
	pubDate: Date
	image?: {
		url: string
		alt: string
	}
	minutesRead: number
}

type Props = {
	frontmatter: PostFrontmatter
	headings: MarkdownHeading[]
	slug: string
}

const { frontmatter, headings, slug } = Astro.props
const date = formatDate(frontmatter.pubDate)
const isoDate = new Date(frontmatter.pubDate).toISOString()
const toc = generateToc(headings)
---

<BaseLayout
	title={frontmatter.title}
	description={frontmatter.description}
	image={frontmatter.image?.url}
>
	<Aside>
		<a
			href="/"
			class="hover:text-foreground dark:text-foreground flex items-center gap-1 py-1 text-sm leading-tight font-medium text-neutral-400 transition-colors"
			><Undo />Index</a
		>
		<div class="hidden xl:block">
			<TableOfContents client:visible toc={toc} />
		</div>
	</Aside>
	<article>
		<header>
			<h1 id="overview" class="scroll-mt-16 font-medium">
				{frontmatter.title}
			</h1>
			<time
				class="text-muted-foreground flex flex-wrap items-center gap-6 gap-y-4"
				datetime={isoDate}
			>
				{date}
			</time>
		</header>

		<div
			class="prose prose-neutral prose-headings:font-medium prose-headings:scroll-mt-16 prose-code:before:hidden prose-code:after:hidden prose-pre:p-4 prose-img:rounded-md prose-img:border prose-img:border-border prose-img:mx-auto dark:prose-invert prose-headings:text-base mx-auto mt-12 w-full max-w-full flex-1 pb-6 lg:mx-0 [&_:not(pre)_>_code]:rounded [&_:not(pre)_>_code]:bg-zinc-200 [&_:not(pre)_>_code]:px-2 [&_:not(pre)_>_code]:py-1 dark:[&_:not(pre)_>_code]:bg-zinc-700"
		>
			<slot />
		</div>
		<div class="flex items-center justify-between pt-4">
			<PostStats client:visible slug={slug} />
			<BackTopButton />
		</div>
	</article>
</BaseLayout>
