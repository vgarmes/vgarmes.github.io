{
	"arrowParens": "avoid",
	"singleQuote": true,
	"bracketSpacing": true,
	"endOfLine": "lf",
	"semi": false,
	"tabWidth": 2,
	"trailingComma": "none",
	"useTabs": true,
	"plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		},
		{
			"files": "*.mdx|*.md",
			"options": {
				"useTabs": false
			}
		}
	]
}
